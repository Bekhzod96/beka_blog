<%= render 'shared/errors', obj: @article %>
<div class="row">
	<div class='col-12'>
		<%= form_for(@article, :html => {class: "form-horizontal  ", role: "form"}) do |f| %>
		<div class="form-group row ">
			<div class="control-label col-sm-2">
				<%= f.label :title %>
			</div>
			<div class="col-sm-10">
				<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
			</div>
		</div>
		<div class="form-group row ">
			<div class="control-label col-sm-2">
				<%= f.label :description %>
			</div>
			<div class="col-sm-10">
				<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="offset-2 col-sm-10">
					<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
					<% cb.label(class: "input-group-mb-2 ") {cb.check_box(class: "checkbox m-2") + cb.text} %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-2"></div>
			<div class="col-xs-3 ml-3">
				<%= f.submit class: 'btn btn-light btn-lg' %>
			</div>
			<div class="col-xs-3 ml-5 ">
				<%= link_to "Cancel request", articles_path, class: 'btn btn-light btn-lg'  %>
			</div>
		</div>
		<% end %>

	</div>

</div>
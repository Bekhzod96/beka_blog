<h1 align="center">Listing All Categories</h1>
<div  class="center">
	<% @categories.each do |category| %>
	<ul class="list">
		<div class="row">
			<div class=" col-md-4 ">
				<li class="card-title">
					<%= link_to "#{category.name}", category_path(category) %>
				</li>
				<li><small><%= pluralize(category.articles.count, "article") %></small></li>
				<%= link_to "#{category.name}", category_path(category) %>
			</div>
		</div>
	</ul>
	<% end %>
	<div class="row list">
		<div class="offset-5">
			<li class="card-title">
		<%= will_paginate %>
			</li></div></div>
</div>
